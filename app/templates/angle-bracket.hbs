<div class="flex flex-wrap -mx-1 overflow-hidden">

  <div class="my-1 px-1 w-1/2 overflow-hidden">
  <h1>Handlebars Syntax</h1>
  <hr>
  <div class="hbs">
    {{#let (get-code-snippet "old-component.hbs") as |snippet|}}
      <pre class={{snippet.language}}>{{snippet.source}}</pre>
    {{/let}}
    </div>
  </div>


  <div class="my-1 px-1 w-1/2 overflow-hidden">
  <h1>Angle Bracket Syntax</h1>
  <hr>
  <div class="hbs">
    {{#let (get-code-snippet "new-component.hbs") as |snippet|}}
      <pre class={{snippet.language}}>{{snippet.source}}</pre>
    {{/let}}
  </div>
  </div>

